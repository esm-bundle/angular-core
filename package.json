{
  "name": "@esm-bundle/angular-core",
  "version": "9.1.2",
  "description": "Repo to test esm-bundle's automatic publishing",
  "type": "module",
  "scripts": {
    "test": "yarn build && concurrently -n w: 'yarn:test:*'",
    "test:browser": "karma start karma.conf.cjs --single-run",
    "debug:test:browser": "karma start karma.conf.cjs",
    "test:unit": "mocha -r chai/register-expect 'node-test/**/*.*'",
    "test:formatting": "prettier --check './**/*'",
    "build": "rollup -c",
    "prettier": "prettier --write './**/*'",
    "release": "release-it",
    "prepublishOnly": "yarn build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && yarn test"
    }
  },
  "files": [
    "esm",
    "system"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esm-bundle/angular-core.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/esm-bundle/angular-core/issues"
  },
  "homepage": "https://github.com/esm-bundle/angular-core#readme",
  "devDependencies": {
    "@angular/core": "^9.1.2",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "esm-bundle-scripts": "1.0.0",
    "rxjs": "npm:@esm-bundle/rxjs"
  }
}
